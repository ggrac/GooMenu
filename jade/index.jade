	head
		title GooMenu
		link(rel="stylesheet", type="text/css", href="css/font-awesome.css")
		link(rel="stylesheet", type="text/css", href="css/style.css")
	body
		.pop-pointer
		header.clearfix
			ul.menu
				li 
					a(href='#') +User
				li
					a(href='#') Gmail
				li
