				li
					a(href='#' data-pop='icons').fa.fa-th
				li
					a(href='#' data-pop='notif').fa.fa-bell-o
				li
					a(href='#' data-pop='share').fa.fa-plus.plus
				li
					a(href='#' data-pop='profile')
						img(src='img/profile.jpg')
